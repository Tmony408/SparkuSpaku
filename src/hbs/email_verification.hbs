{{!-- views/emails/verify-otp.hbs --}}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{{appName}} Email Verification</title>
    <style>
      body { margin:0; padding:0; background:#f5f7fb; font-family: Arial, Helvetica, sans-serif; color:#111827; }
      .container { width:100%; padding:24px 0; }
      .card { max-width:560px; margin:0 auto; background:#ffffff; border-radius:14px; overflow:hidden; border:1px solid #e5e7eb; }
      .header { padding:20px 24px; background:#111827; color:#ffffff; }
      .header h1 { margin:0; font-size:16px; letter-spacing:0.2px; }
      .content { padding:24px; }
      .title { margin:0 0 8px; font-size:18px; }
      .sub { margin:0 0 18px; color:#4b5563; font-size:14px; line-height:1.5; }
      .otp-wrap { margin:18px 0 10px; text-align:center; }
      .otp { display:inline-block; padding:14px 18px; border-radius:12px; border:1px dashed #c7d2fe; background:#eef2ff; font-size:28px; letter-spacing:10px; font-weight:700; color:#111827; }
      .meta { margin:14px 0 0; font-size:13px; color:#6b7280; line-height:1.5; }
      .divider { height:1px; background:#e5e7eb; margin:22px 0; }
      .footer { padding:18px 24px; font-size:12px; color:#6b7280; line-height:1.5; }
      .badge { display:inline-block; padding:4px 10px; border-radius:999px; background:#10b981; color:#ffffff; font-size:12px; }
      a { color:#2563eb; text-decoration:none; }
      @media (max-width: 600px) {
        .content, .header, .footer { padding:18px; }
        .otp { font-size:24px; letter-spacing:8px; }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="card">
        <div class="header">
          <h1>{{appName}} <span class="badge">Verify</span></h1>
        </div>

        <div class="content">
          <p class="title">Verify your email</p>

          <p class="sub">
            Hi {{#if firstName}}{{firstName}}{{else}}there{{/if}},
            use the one-time password (OTP) below to verify your {{appName}} account.
          </p>

          <div class="otp-wrap">
            <div class="otp">{{otp}}</div>
          </div>

          <p class="meta">
            This code expires in <strong>{{expiresInMinutes}} minutes</strong>.
            If you did not request this, you can safely ignore this email.
          </p>

          <div class="divider"></div>

          <p class="meta">
            For your security, do not share this code with anyone, including {{appName}} support.
          </p>
        </div>

        <div class="footer">
          <div>
            Need help? Contact us at
            <a href="mailto:{{supportEmail}}">{{supportEmail}}</a>.
          </div>
          <div style="margin-top:10px;">
            Â© {{year}} {{appName}}. All rights reserved.
          </div>
        </div>
      </div>
    </div>
  </body>
</html>